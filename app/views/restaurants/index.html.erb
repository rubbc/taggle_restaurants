<h1>Restaurants</h1>

<%= simple_form_for :search, url: root_path, method: "GET", html: {id: 'query' } do |f| %>
  <%= f.input :name, input_html: {value: "", placeholder: "search restaurant", class: 'search-restaurant'} %>
  <%= f.submit "Search", class: "btn btn-secondary" %>
<% end %>




<% @restaurants.each do |r| %>
  <%# raise %>
  <p><%= link_to r.name.titleize, restaurant_path(r) %></p>
  <p><%#= r.id %></p>
  <p><%#= r.description %></p>
  <p><%# r.tag_list.each do |tag| %>
    <%#= link_to tag, tagged_path(tag: tag) %>
  <%# end %></p>
<% end %>



