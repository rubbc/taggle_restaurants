<ul>
  <% @restaurants.each do |r| %>
    <% if !r.arrondissement.nil? %>
      <% if r.arrondissement == @restaurant.arrondissement && r.id != @restaurant.id %>
        <li><%= link_to r.name, restaurant_path(r) %></li>
      <% end %>
    <% end %>
  <% end %>
</ul>



